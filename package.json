{
  "name": "filecloner",
  "productName": "File Cloner",
  "version": "1.0.1",
  "description": "A small app to clone files",
  "author": "mrganser <contact@mrganser.com>",
  "repository": "https://bitbucket.org/mrganser/filecloner",
  "license": "MIT",
  "keywords": [
    "file",
    "clone",
    "Electron"
  ],
  "main": "app/background.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "node config/start.js",
    "dist": "webpack --config=config/webpack.app.config.js --env=production && electron-builder"
  },
  "build": {
    "appId": "com.mrganser.filecloner",
    "directories": {
      "buildResources": "src/assets/icons"
    },
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.0",
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "electron-reload": "^1.2.5",
    "file-loader": "^2.0.0",
    "font-awesome": "^4.7.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "standard": "~12.0.1",
    "style-loader": "^0.23.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  }
}
