{
  "name": "filecloner",
  "productName": "File Cloner",
  "version": "1.0.0",
  "description": "A small app to clone files",
  "author": "mrganser <contact@mrganser.com>",
  "repository": "https://bitbucket.org/mrganser/filecloner",
  "license": "MIT",
  "keywords": [
    "file",
    "clone",
    "Electron"
  ],
  "main": "app/background.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "node config/start.js",
    "dist": "webpack --config=config/webpack.app.config.js --env=production && electron-builder"
  },
  "build": {
    "appId": "com.mrganser.filecloner",
    "directories": {
      "buildResources": "src/assets/icons"
    },
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.32",
    "@babel/preset-env": "^7.0.0-beta.32",
    "@babel/preset-react": "^7.0.0-beta.32",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "css-loader": "^0.28.7",
    "electron": "^1.7.9",
    "electron-builder": "^19.46.9",
    "electron-reload": "^1.2.2",
    "file-loader": "^1.1.5",
    "font-awesome": "^4.7.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "standard": "~10.0.3",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "react": "^16.1.1",
    "react-dom": "^16.1.1"
  }
}
